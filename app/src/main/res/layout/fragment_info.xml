<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".loginPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="247dp"
        android:layout_height="147dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="353dp"
        android:layout_height="175dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:lines="10"
        android:text="We are a group of  engineering student that had the idea to create such application in order to to make volunteering easily accessible by providing a user-friendly platform that connects volunteers with non-profit organizations. By promoting active participation and making volunteering accessible to all, we aim to inspire and mobilize more people to make a positive impact on our community."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_rec"
        android:drawableLeft="@drawable/baseline_email_24"
        android:gravity="center_vertical"
        android:text=" ‎‏‏‎ ‎contact@helphub.com"
        android:textColor="#0B0B0B"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_rec"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:gravity="center_vertical"
        android:text=" ‎‏‏‎ ‎helphub.com"
        android:textColor="#0B0B0B"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.065" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_rec"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:gravity="center_vertical"
        android:text=" ‎‏‏‎ ‎0661920748"
        android:textColor="#0B0B0B"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.054" />

</androidx.constraintlayout.widget.ConstraintLayout>