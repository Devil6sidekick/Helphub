<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".loginPage">

    <EditText
        android:id="@+id/settings_name"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_shape"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:hint=" ‎‏‏‎ ‎FullName"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#959494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_image" />

    <EditText
        android:id="@+id/settings_password"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_shape"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint=" ‎‏‏‎ ‎ Change Password"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#959494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_phone" />

    <EditText
        android:id="@+id/settings_mail"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_shape"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:hint=" ‎‏‏‎ ‎Email"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#959494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_name" />

    <EditText
        android:id="@+id/settings_phone"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_shape"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:hint=" ‎‏‏‎ ‎Phone Number"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#959494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_mail" />

    <ImageView
        android:id="@+id/account_image"
        android:layout_width="184dp"
        android:layout_height="94dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imageview" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CD3333"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_password"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/update_name_button"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:text="U"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toEndOf="@+id/settings_name"
        app:layout_constraintTop_toBottomOf="@+id/account_image" />

    <Button
        android:id="@+id/update_email_button"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:text="U"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toEndOf="@+id/settings_mail"
        app:layout_constraintTop_toBottomOf="@+id/update_name_button" />

    <Button
        android:id="@+id/update_phone_button"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:text="U"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toEndOf="@+id/settings_phone"
        app:layout_constraintTop_toBottomOf="@+id/update_email_button" />

    <Button
        android:id="@+id/update_password_button"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:text="U"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/settings_password"
        app:layout_constraintTop_toBottomOf="@+id/update_phone_button"
        app:layout_constraintVertical_bias="0.112" />

</androidx.constraintlayout.widget.ConstraintLayout>